@{
    ViewBag.Title = "Articole";
}

<h2>@ViewBag.Title</h2>

<!-- <p>Am adaugat ceva in view</p> -->
<a class="btn btn-success" href="/Article/New" role="button" style="margin-left: 60%">Adaugare articol</a>
<br />

@foreach (var article in ViewBag.articles)
{
    <h1>@article.currentVersionId.title</h1>

    <h3>Descriere</h3>
    <img src=@article.currentVersionId.thumbnail width="100" style="float: left;"/>
    <p>@article.currentVersionId.description</p>

    <small>Data creare: @article.creationDate</small>
    <br />
    <small>Ultima actualizare: @article.currentVersionId.creationDate.ToString()</small>
    <br />
    <form method="post" action="/Article/Delete/@article.id">
        @Html.HttpMethodOverride(HttpVerbs.Delete)
        <a class="btn btn-primary" href="/Article/Show/@article.id" role="button">Afisare articol</a>
        <a class="btn btn-warning" href="/Article/Edit/@article.id" role="button">Editare articol</a>
        <button class="btn btn-danger" role="button" type="submit">Stergere articol</button>
    </form>
    <br />
    <hr />
    <br />
}
